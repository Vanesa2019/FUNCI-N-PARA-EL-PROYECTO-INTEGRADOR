#ESTA FUNCIÓN NOS DEVUELVE EL COSTO DE UN SERVICIO CUANDO PROPORCIONAMOS EL idServicio
#SE CONSULTARÁ EN LA TABLA LLAMADA "SERVICIO" Y SE MOSTRARÁ EL COSTO DEL SERVICIO QUE SE REQUIERE CUYO idServicio COINCIDA CON CON EL VALOR id_servicio.
#SE GUARDA LA VARIABLE costo_servicio Y DEVUELVE EL COSTO DEL SERVICIO.

DELIMITER //

CREATE FUNCTION obtener_costo_servicio(id_servicio INT)
RETURNS FLOAT
DETERMINISTIC
BEGIN
   DECLARE costo_servicio FLOAT;
   
   SELECT s.Costo INTO costo_servicio
   FROM servicio s
   WHERE s.idServicio = id_servicio;
   
   RETURN costo_servicio;
END //

DELIMITER ;

